# Test file for mcmc on normal distribution
a <- -1.0
b <- 1.0

mu ~ unif(a, b)
sigma ~ exp(1.0)

mu1 := 1.0 - mu

for (i in 1:2) {
    x[i] ~ norm(mu1, sigma)
    clamp(x[i], 0.5)
}

mymodel <- model(x)

mymcmc <- mcmc(mymodel, ngen=100, printfreq=1, samplefreq=1, file="test.out")

mymcmc.update()
