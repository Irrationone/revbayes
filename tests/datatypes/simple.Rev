# testing the simple/basic datatypes

# first we create two Natural variable
a <- 1
print(filename = "Test results simple datatypes.txt", append = FALSE, "Type of 1:			", type(a) )
b <- 2
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of 2:			", type(b) )
c <- a + b
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of 1+2:			", type(c) )
c <- a - b
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of 1-2:			", type(c) )
c <- a * b
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of 1*2:			", type(c) )
c <- a / b
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of 1/2:			", type(c) )

# now we create a Integer
c <- -2
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of -2:			", type(c) )
d <- 5
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of 5:			", type(d) )
e <- c * d
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of -2 * 5:			", type(e) )
e <- c / d
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of -2 / 5:			", type(e) )

# a real value
f <- -1.2345
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of -1.2345:		", type(f) )
g <- abs(f)
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of |-1.2345|:		", type(g) )
# a positive real
h <- 2.3
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of 2.3:			", type(h) )
i <- h + g
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of 2.3 + 1.2345:		", type(i) )
i <- h - g
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of 2.3 - 1.2345:		", type(i) )
i <- h * g
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of 2.3 * 1.2345:		", type(i) )
i <- h / g
print(filename = "Test results simple datatypes.txt", append = TRUE, "Type of 2.3 / 1.2345:		", type(i) )


