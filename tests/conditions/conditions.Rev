# conditional statements (if, if-else, if-else if-else)

# first we test all the logical operators
# AND
if ( TRUE && TRUE ) {
   print(filename = "Test results conditional statements.txt", append = FALSE, " TRUE && TRUE -> TRUE")
} else {
   print(filename = "Test results conditional statements.txt", append = FALSE, " TRUE && TRUE -> FALSE")
}

# OR
if ( TRUE || FALSE ) {
   print(filename = "Test results conditional statements.txt", append = TRUE, " TRUE || FALSE -> TRUE")
} else {
   print(filename = "Test results conditional statements.txt", append = TRUE, " TRUE || FALSE -> FALSE")
}
if ( TRUE || TRUE ) {
   print(filename = "Test results conditional statements.txt", append = TRUE, " TRUE || TRUE -> TRUE")
} else {
   print(filename = "Test results conditional statements.txt", append = TRUE, " TRUE || TRUE -> FALSE")
}
if ( FALSE || TRUE ) {
   print(filename = "Test results conditional statements.txt", append = TRUE, " FALSE || TRUE -> TRUE")
} else {
   print(filename = "Test results conditional statements.txt", append = TRUE, " FALSE || TRUE -> FALSE")
}
if ( FALSE || FALSE ) {
   print(filename = "Test results conditional statements.txt", append = TRUE, " FALSE || FALSE -> TRUE")
} else {
   print(filename = "Test results conditional statements.txt", append = TRUE, " FALSE || FALSE -> FALSE")
}

# NOT
if ( !TRUE ) {
   print(filename = "Test results conditional statements.txt", append = TRUE, " !TRUE -> TRUE")
} else {
   print(filename = "Test results conditional statements.txt", append = TRUE, " !TRUE -> FALSE")
}
if ( !FALSE ) {
   print(filename = "Test results conditional statements.txt", append = TRUE, " !FALSE -> TRUE")
} else {
   print(filename = "Test results conditional statements.txt", append = TRUE, " !FALSE -> FALSE")
}

