# distribution functions

# Beta distribution
a <- dbeta(0.5,1,1)
b <- dbeta(0.5,1,1,log=TRUE)
c <- qbeta(0.5,1,1)
d <- pbeta(0.75,1,1)
e ~ beta(1,1) 
f <- rbeta(1,1)
print(filename = "Test results math-distributions.txt", append = FALSE, "Beta distribution")
print(filename = "Test results math-distributions.txt", append = TRUE, "PDF:		", a)
print(filename = "Test results math-distributions.txt", append = TRUE, "log-PDF:	", b)
print(filename = "Test results math-distributions.txt", append = TRUE, "Quantile:	", c)
print(filename = "Test results math-distributions.txt", append = TRUE, "CDF:		", d)
print(filename = "Test results math-distributions.txt", append = TRUE)
# Dirichlet distribution
p <- v(1,1,1,1)
x <- simplex(1,1,1,1)
a <- ddirichlet(x,p)
b <- ddirichlet(x,p,log=TRUE)
d ~ dirichlet(p) 
e <- rdirichlet(p)
print(filename = "Test results math-distributions.txt", append = TRUE, "Dirichlet distribution")
print(filename = "Test results math-distributions.txt", append = TRUE, "PDF:		", a)
print(filename = "Test results math-distributions.txt", append = TRUE, "log-PDF:	", b)
print(filename = "Test results math-distributions.txt", append = TRUE)

