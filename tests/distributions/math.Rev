# distribution functions

# Beta distribution
a <- dbeta(0.5,1,1)
b <- dbeta(0.5,1,1,log=TRUE)
c <- qbeta(0.5,1,1)
d ~ beta(1,1) 
e <- rbeta(1,1)
print(filename = "Test results math-distributions.txt", append = FALSE, a)
print(filename = "Test results math-distributions.txt", append = TRUE, b)
print(filename = "Test results math-distributions.txt", append = TRUE, c)

# Dirichlet distribution
p <- simplex(1,1,1,1)
x <- simplex(1,1,1,1)
a <- ddirichlet(x,p)
b <- ddirichlet(x,p,log=TRUE)
d ~ dirichlet(p) 
e <- rdirichlet(p)
print(filename = "Test results math-distributions.txt", append = TRUE, a)
print(filename = "Test results math-distributions.txt", append = TRUE, b)

